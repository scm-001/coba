<head>
    <title>Aplikasi Penjumlahan</title>
    <style>
        body { font-family: sans-serif; text-align: center; padding: 50px; }
        input { padding: 10px; font-size: 16px; margin: 5px; }
        button { padding: 10px 20px; font-size: 16px; cursor: pointer; }
    </style>
</head>
<body>

    <h2>Kalculator Sederhana</h2>
    
    <input type="number" id="bil1" placeholder="Masukkan Angka">
    <input type="number" id="bil2" placeholder="Masukkan Angka">
    <br><br>

    <button style="padding: 15px 40px; font-size: 18px; font-weight: bold; color: white; background-color: #e74c3c; border: none; border-radius: 10px; box-shadow: 0 8px #c0392b; cursor: pointer; transition: all 0.1s;" onmouseover="this.style.transform='translateY(2px)'; this.style.boxShadow='0 6px #c0392b';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 8px #c0392b';" onclick="tambah()">
    Tambah (+)
    </button>
    
    <h3 id="hasil">Hasil = -</h3>

    <script>
        function tambah() {
            var a = document.getElementById("bil1").value;
            var b = document.getElementById("bil2").value;
            var hasil = parseFloat(a) + parseFloat(b);
            document.getElementById("hasil").innerText = "Hasil: " + hasil;
        }
    </script>

</body>
